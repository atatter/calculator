<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aleks.calculator.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nrfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="100px"
            android:text="0"
            style="@style/calc_answer"/>


    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="C"
            android:id="@+id/btn01"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="75%"
            style="@style/button_calc"
            android:onClick="resetOnclick"
            />
        <Button
            android:text="/"
            android:id="@+id/btn02"
            android:layout_alignTop="@id/btn01"
            android:layout_toRightOf="@id/btn01"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="opOnclick"/>
        <Button
            android:text="7"
            android:id="@+id/btn03"
            android:layout_below="@id/btn01"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="8"
            android:id="@+id/btn04"
            android:layout_alignTop="@id/btn03"
            android:layout_toRightOf="@id/btn03"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="9"
            android:id="@+id/btn05"
            android:layout_toRightOf="@id/btn04"
            android:layout_alignTop="@id/btn04"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="*"
            android:id="@+id/btn06"
            android:layout_alignTop="@id/btn05"
            android:layout_toRightOf="@id/btn05"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="opOnclick"/>
        <Button
            android:id="@+id/btn07"
            android:text="4"
            android:layout_below="@id/btn03"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="5"
            android:id="@+id/btn08"
            android:layout_alignTop="@id/btn07"
            android:layout_toRightOf="@id/btn07"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="6"
            android:id="@+id/btn09"
            android:layout_alignTop="@id/btn08"
            android:layout_toRightOf="@id/btn08"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="+"
            android:id="@+id/btn10"
            android:layout_alignTop="@id/btn09"
            android:layout_toRightOf="@id/btn09"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="opOnclick"
             />
        <Button
            android:text="1"
            android:id="@+id/btn11"
            android:layout_below="@id/btn07"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="2"
            android:id="@+id/btn12"
            android:layout_alignTop="@id/btn11"
            android:layout_toRightOf="@id/btn11"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="3"
            android:id="@+id/btn13"
            android:layout_alignTop="@id/btn12"
            android:layout_toRightOf="@id/btn12"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="-"
            android:id="@+id/btn14"
            android:layout_alignTop="@id/btn13"
            android:layout_toRightOf="@id/btn13"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="opOnclick"/>
        <Button
            android:text="."
            android:id="@+id/btn15"
            android:layout_below="@id/btn11"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="commaOnclick"/>
        <Button
            android:text="0"
            android:id="@+id/btn16"
            android:layout_alignTop="@id/btn15"
            android:layout_toRightOf="@id/btn15"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="25%"
            style="@style/button_calc"
            android:onClick="nrOnclick"/>
        <Button
            android:text="="
            android:id="@+id/btn17"
            android:layout_alignTop="@id/btn16"
            android:layout_toRightOf="@id/btn16"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="50%"
            style="@style/button_calc"
            android:onClick="opOnclick"/>

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>

